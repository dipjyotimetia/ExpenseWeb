{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "es6",
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "Node",
    "noEmit": true,
    "strict": false,
    "target": "ESNext",
    "skipLibCheck": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": [
    "src"
  ]
}
